# إعدادات خدمة الرسائل - منصة نائبك.كوم
# انسخ هذا الملف إلى .env وقم بتعديل القيم

# إعدادات Django الأساسية
SECRET_KEY=your-very-secret-key-here-change-this-in-production
DEBUG=True
ALLOWED_HOSTS=localhost,127.0.0.1,0.0.0.0

# إعدادات قاعدة البيانات PostgreSQL
DATABASE_NAME=naebak_messaging
DATABASE_USER=postgres
DATABASE_PASSWORD=your_database_password
DATABASE_HOST=localhost
DATABASE_PORT=5432
DATABASE_URL=postgresql://postgres:your_database_password@localhost:5432/naebak_messaging

# إعدادات Redis
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0
REDIS_URL=redis://localhost:6379/0

# إعدادات JWT للمصادقة
JWT_SECRET_KEY=your-jwt-secret-key-here
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_LIFETIME=60
JWT_REFRESH_TOKEN_LIFETIME=1440

# إعدادات البريد الإلكتروني
EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=your-email@gmail.com
EMAIL_HOST_PASSWORD=your-app-password
DEFAULT_FROM_EMAIL=noreply@naebak.com

# إعدادات Celery للمهام غير المتزامنة
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/0
CELERY_ACCEPT_CONTENT=json
CELERY_TASK_SERIALIZER=json
CELERY_RESULT_SERIALIZER=json
CELERY_TIMEZONE=Africa/Cairo

# إعدادات الملفات والوسائط
MEDIA_URL=/media/
MEDIA_ROOT=/app/media/
STATIC_URL=/static/
STATIC_ROOT=/app/static/

# إعدادات الأمان
SECURE_SSL_REDIRECT=False
SECURE_HSTS_SECONDS=0
SECURE_HSTS_INCLUDE_SUBDOMAINS=False
SECURE_HSTS_PRELOAD=False
SECURE_CONTENT_TYPE_NOSNIFF=True
SECURE_BROWSER_XSS_FILTER=True
X_FRAME_OPTIONS=DENY
SECURE_REFERRER_POLICY=strict-origin-when-cross-origin

# إعدادات CORS
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://127.0.0.1:3000
CORS_ALLOW_CREDENTIALS=True

# إعدادات التسجيل
LOG_LEVEL=INFO
LOG_FILE=/app/logs/messaging_service.log

# إعدادات المراقبة والإحصائيات
SENTRY_DSN=
MONITORING_ENABLED=False

# إعدادات خدمة المحتوى (للتكامل)
CONTENT_SERVICE_URL=http://localhost:8000
CONTENT_SERVICE_API_KEY=your-content-service-api-key

# إعدادات خدمة المصادقة (للتكامل)
AUTH_SERVICE_URL=http://localhost:8002
AUTH_SERVICE_API_KEY=your-auth-service-api-key

# إعدادات الإشعارات
PUSH_NOTIFICATIONS_ENABLED=False
FCM_SERVER_KEY=your-fcm-server-key
APNS_CERTIFICATE_PATH=/app/certs/apns.pem

# إعدادات SMS
SMS_PROVIDER=twilio
TWILIO_ACCOUNT_SID=your-twilio-account-sid
TWILIO_AUTH_TOKEN=your-twilio-auth-token
TWILIO_PHONE_NUMBER=+1234567890

# إعدادات التخزين السحابي (اختياري)
USE_S3=False
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_STORAGE_BUCKET_NAME=naebak-messaging-media
AWS_S3_REGION_NAME=us-east-1

# إعدادات التطوير
DJANGO_SETTINGS_MODULE=messaging_service.settings
PYTHONPATH=/app
DJANGO_DEBUG_TOOLBAR=False

# إعدادات الاختبار
TEST_DATABASE_NAME=test_naebak_messaging
COVERAGE_ENABLED=True
PYTEST_ADDOPTS=--verbose --tb=short

# إعدادات Docker
COMPOSE_PROJECT_NAME=naebak-messaging
DOCKER_REGISTRY=naebak
IMAGE_TAG=latest
